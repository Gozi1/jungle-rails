<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
  <%# Their image, name and description %>
  <tbody>
        <% @order.line_items.each do |item| %>
        
          <%= render 'item', product: Product.find(item.product_id), quantity: item.quantity %>
        <% end %>
      </tbody>
  <%# Their respective quantities and line item totals %>
  <%# The final amount for the order %>
  <h4>Order Total : <%= humanized_money_with_symbol  @order.total%></h4>
  <%# The email that was used %>
  <h4> <%= @order.email %></h4>
  
    <h4>Thank you for your order!</h4>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
