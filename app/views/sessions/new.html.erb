<header class="page-header">
<h1>Login</h1>
</header>
<%= form_tag '/login',class:'d-flex flex-column align-items-start' do %>

  Email: <%= text_field_tag :email, nil, placeholder:'Enter Email', class: 'form-control' %>
  <br>
  Password: <%= password_field_tag :password, nil, placeholder:'Enter Password', class: 'form-control' %>
  <br>
  <%= submit_tag "Submit",class:'btn btn-light btn-outline-dark form-control'  %>

<% end %>