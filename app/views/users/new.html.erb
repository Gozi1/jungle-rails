
<header class="page-header">
<h1>Signup</h1>
</header>
<%= form_for :user, url: '/users' do |f| %>
<div class="form-group">
  Name: <%= f.text_field :name, placeholder:'Enter Name', class: 'form-control' %>
  <br>
  Email: <%= f.text_field :email,  placeholder:'Enter Email', class: 'form-control' %>
  <br>
  Password: <%= f.password_field :password,class:'mw-100',  placeholder:'Enter Password', class: 'form-control' %>
  <br>
  Password Confirmation: <%= f.password_field :password_confirmation ,placeholder:'Confirm Password', class: 'form-control' %>
  <br>
  <%= f.submit "Submit", class:'btn btn-light btn-outline-dark form-control' %>
</div>
<% end %>